<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alzhapp">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlzhApp">
        <activity
            android:name=".AdaugareMedicament"
            android:exported="false" />
        <activity
            android:name=".Medicatie"
            android:exported="false" />
        <activity
            android:name=".DetaliiPacienti"
            android:exported="false" />
        <activity
            android:name=".PaginaPrincipalaPacient"
            android:exported="false" />
        <activity
            android:name=".PaginaPrincipalaDoctor"
            android:exported="false" />
        <activity
            android:name=".InregistrareDoctor"
            android:exported="false" />
        <activity
            android:name=".Autentificare"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name=".MyReceiver"
            android:exported="true"
            android:enabled="true">
        </receiver>
    </application>

</manifest>