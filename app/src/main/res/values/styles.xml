<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mybutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bkant</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">26dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#07040D</item>
        <item name="android:textSize">20dp</item>
        <item name="android:backgroundTint">#A9968E</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="my_edit_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColorHint">#E4DCD4</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:fontFamily">@font/bkant</item>
        <item name="android:background">@drawable/my_text</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#E4DCD4</item>
    </style>

    <style name="titlu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/vladimir</item>
        <item name="android:textColor">#E4DCD4</item>
        <item name="android:textSize">57dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="button_bar">
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>